{
  "manifest_version": 3,
  "name": "Cookie同步器",
  "version": "1.0.0",
  "description": "安全地同步浏览器Cookie数据到云端服务器",
  "permissions": [
    "cookies",
    "storage",
    "alarms",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/background-simple.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Cookie同步器",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}